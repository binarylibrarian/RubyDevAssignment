<%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <div class="row">
        <div class="small-5 columns">
          <%= f.label :name %>
        </div>
        <div class="small-19 columns">
          <%= f.text_field :name %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="row">
        <div class="small-5 columns">
          <%= f.label :Start %>
        </div>
        <div class="small-19 columns">
          <%= f.datetime_select :start_at %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="row">
        <div class="small-5 columns">
          <%= f.label :Finish %>
        </div>
        <div class="small-19 columns">
          <%= f.datetime_select :finish_at %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="row">
        <div class="small-5 columns">
          <%= f.label :description %>
        </div>
        <div class="small-19 columns">
          <%= f.text_area :description %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
</div>